extends layout
head 
  block style 
    link(rel='stylesheet' href='stylesheets/style.css')
    link(href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css', rel='stylesheet')
    link(rel='stylesheet', href='boxicons.min.css')

block content
  div#main_content
    .sidebar
      ul.nav-links
        nav
          .profile-details
            img(src='images/profile.jpg', alt='')
            a.admin_name(href='editProfile?id=#{user.id}') #{user.name}
        br
        li.yourdesgin 
          a(href='/foldermanager/get/#{defaultFolder.id}')
           i.bx.bx-folder 
           span.lins_name #{defaultFolder.folderName} 

        li.favororities
          a(href='#')
            i.bx.bx-heart
            span.links_name Favrorites
        li.add
          a(href='#')
            i.bx.bx-add-to-queue
            span.links_name(type='button' onclick='toggleMe()') Add New Folder
        li#popup
            div
                input(type='text', id='new_folder_name')
                button(onclick='saveFolder(document.getElementById("new_folder_name").value);toggleMe();') Save
   
        each folder in folders
            li
                a(href='/foldermanager/get/#{folder.id}')
                    i.bx.bx-folder
                    span.links_name #{folder.folderName}
        li.log_out
          a(href="/logout")
            i.bx.bx-logout
            span.links_name Logout
    .rigthtop
        a(href='#')
          i.bx.bx-add-to-queue
          a.i(href='/whiteboard', title='Create New Desgin') Create New Desgin
    .rightbutton
        each image in images 
          image(src=image.data, width=100, height=100)
      
    style.
      #popup {
          display: none;
          }
      #main_content {
        display: flex;
      }
        
