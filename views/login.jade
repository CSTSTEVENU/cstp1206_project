extends layout

head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Login
    block style
        link(rel='stylesheet' href='/stylesheets/setting.css')
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
        script(src='/javascript/client.js')
                               
block content
    section
      .container
        .row
          .col-sm-9.col-md-7.col-lg-5.mx-auto
            .card.border-0.shadow.rounded-3.my-5
              .card-body.p-4.p-sm-5
                h3.card-title.text-center.mb-5.fw-light.fs-5 Login
                form#login(action='/login', method='POST')
                  .mb-3
                    input(type="hidden",name="_method", value="PUT")
                    if message
                      p #{message}
                    label.form-label(for='typeEmailX-2') Email                            
                    input#typeEmailX-2.form-control.form-control-lg(name="email", type='email', placeholder='xxxxx@gmail.com')                  
                  .mb-3
                    label.form-label(for='typePasswordX-2') Password                             
                    input#typePasswordX-2.form-control.form-control-lg(name="password", type='password')
                  .text-center.justify-content-start.mb-5
                    a(href='/register', ,='', title='register') Create An Account
                  .text-center.justify-content-start.mb-3
                    button.btn.btn-primary.btn-lg.btn-block.text-center(type='submit') Submit