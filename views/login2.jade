extends layout

head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Login
    block style
        link(rel='stylesheet' href='/stylesheets/setting.css')
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
                               
body
  block content
    if message
        p #{message}
    section
      .container.py-5
        .row.d-flex.justify-content-center.align-items-center.h-100
          .col-11.col-md-6.col-lg-6.col-xl-5
            .card.shadow-2-strong(style='border-radius: 1rem;')
              .card-body.p-5.text-center
                h3.mb-5 Log in                     
                .form-outline.mb-4#login(action='/login', method='POST')
                  label.form-label(for='typeEmailX-2') Email                            
                  input#typeEmailX-2.form-control.form-control-lg(type='email', placeholder='xxxxx@gmail.com')                          
                .form-outline.mb-4
                  label.form-label(for='typePasswordX-2') Password                             
                  input#typePasswordX-2.form-control.form-control-lg(type='password')
                .text-center.justify-content-start.mb-5
                  a(href='/register', ,='', title='register') Create An Account                          
                button.btn.btn-primary.btn-lg.btn-block(type='submit') Submit