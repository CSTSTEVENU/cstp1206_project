//- Register page functional for new user creation created by Jessica Jing
//- Re-design by Gina Sun, using bootstrap and html
extends layout

head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    block style
      //- The page style which holds codes that we use in register page
      link(rel='stylesheet' href='/stylesheets/setting.css')
      link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', rel='stylesheet')
      //-
      script(src='/javascript/client.js')            

//- Register content
block content
  //- The entire register running equation
  script.
      function validateForm(){ return validatePassword(false);}
  //- Register form
  section
    .container
      .row
        .col-sm-9.col-md-7.col-lg-5.mx-auto
          .card.border-0.shadow.rounded-3.my-5
            .card-body.p-4.p-sm-5
              h3.text-center.mb-5 Create An Account
              //- Register info create by user (input and submit)
              form#register(action='/register', method='post' onsubmit="return validateForm()")
                .mb-3
                  input(type="hidden",name="_method", value="PUT")
                  //- warning message for login page to advise user password is wrong
                  if message
                      p #{message}
                  p#message

                  label.form-label(for='typeNameX-2') User Name                            
                  input#typeEmailX-2.form-control.form-control-sm(name="username", type='text', placeholder='Enter your name')              
                .mb-3
                  label.form-label(for='typePasswordX-2') Email                            
                  input#typePasswordX-2.form-control.form-control-sm(name="email", type='email', placeholder='Enter your email')
                .mb-3
                  label.form-label(for='typePasswordX-2') Password                             
                  input#typePasswordX-2.form-control.form-control-sm(name="pwd", type='password', placeholder='Enter your password')
                .mb-3
                  label.form-label(for='typePasswordX-2') Confirm Password                             
                  input#typePasswordX-2.form-control.form-control-sm(name="cmpwd", type='password', placeholder='Enter your password')
                .text-center.justify-content-start.mb-0.pt-3
                  button.btn.btn-primary.btn-lg.btn-block.text-center(type='submit') Submit