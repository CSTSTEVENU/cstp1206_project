extends layout

head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Register
    block style
        link(rel='stylesheet' href='/stylesheets/setting.css')
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
        script(src='/javascript/client.js')            
body
  block content
    script.
        function validateForm(){ return validatePassword(false);}
    section
      .container
        .row
          .col-sm-9.col-md-7.col-lg-5.mx-auto
            .card.border-0.shadow.rounded-3.my-5
              .card-body.p-4.p-sm-5
                h3.card-title.text-center.mb-5.fw-light.fs-5 Create An Account
                form#register(action='/register', method='post' onsubmit="return validateForm()")
                  .mb-3
                    input(type="hidden",name="_method", value="PUT")
                    p#id("message")
                    label.form-label(for='typeNameX-2') User Name                            
                    input#typeEmailX-2.form-control.form-control-sm(name="username", type='text', placeholder='Name')              
                   .mb-3
                    label.form-label(for='typePasswordX-2') Email                            
                    input#typePasswordX-2.form-control.form-control-sm(name="email", type='email')
                  .mb-3
                    label.form-label(for='typePasswordX-2') Password                             
                    input#typePasswordX-2.form-control.form-control-sm(name="pwd", type='password')
                  .mb-3
                    label.form-label(for='typePasswordX-2') Confirm Password                             
                    input#typePasswordX-2.form-control.form-control-sm(name="cmpwd", type='password')
                  .text-center.justify-content-start.mb-5
                    button.btn.btn-primary.btn-lg.btn-block.text-center(type='submit') Submit